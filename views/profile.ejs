<% include _header %>
<!-- 
    参考变量currentUser来判断你的登陆状态。不过现在它总会是false状态
 -->
<% if ((currentUser) && (currentUser.id === user.id)) { %>
    <a href="/edit" class="pull-right">编辑</a>
<% } %>
<h4>个人资料</h4>

<table class="table table-bordered">
        <thead>
        <tr>
            <th>姓名</th>
            <th>加入时间</th>
            <th>描述</th>
        </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                        <%= user.name() %>
                </td>
                <td>
                        <%= user.createdAt %>
                </td>
                <td>
                        <% if (user.bio) { %>
                            <%= user.bio %>
                        <% } %>
                </td>
            </tr>
        </tbody>
</table>
